<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row">
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><a href="/post/{{post.id}}">{{post.title}}</a></span>
        <p>
          {{post.content}}
        </p>
      </div>
      <div class="card-action white-text">
        <p>Posted by {{post.user.username}} on {{format_date post.updatedAt}} at {{format_time post.updatedAt}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}