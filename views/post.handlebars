<div class="text-left">
<div class="row">
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><a href="/post/{{id}}">{{title}}</a></span>
        <p>
          {{content}}
        </p>
      </div>
      <div class="card-action white-text">
        <p>Posted by {{user.username}} on {{format_date updatedAt}} at {{format_time updatedAt}}</p>
      </div>
    </div>
  </div>
</div>


<h3>Comments</h3>
{{#each comments as |comment| }}
<div class="row">
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p>
          {{comment.content}}
        </p>
      </div>
      <div class="card-action white-text">
        <p>Comment by {{comment.user.username}} on {{format_date comment.updatedAt}} at {{format_time comment.updatedAt}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>

{{#if logged_in}}
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Add a comment!</span>
            <form class="form new-comment-form">
              <div class="form-group">
                <label for="post-content white">Content:</label>
                <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary">Add comment</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script defer src="/js/comment.js"></script>
{{/if}}