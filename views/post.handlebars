<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date updatedAt}}</p>

{{#if logged_in}}
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">comment:</label>
        <input class="form-input" type="text" id="comment-content" name="comment-content" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  <script src="../js/comment.js"></script>

{{/if}}


{{#each comments as |comment| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <p>Created by {{comment.user.username}} on {{format_date comment.updatedAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
</div>
{{/each}}
</div>
