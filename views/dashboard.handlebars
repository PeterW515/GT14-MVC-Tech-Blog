<div class="row">
  <div class="col-auto">
    <h4>Welcome, {{username}}!</h4>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h5>Create a New Post:</h5>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title white">Title:</label>
        <input class="form-input white" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content white">Content:</label>
        <textarea class="form-input white" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h5>Current Posts:</h5>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h6><a href="/post/{{post.id}}">{{post.title}}</a></h6>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger red" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
